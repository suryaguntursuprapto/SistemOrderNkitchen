@startuml Activity Diagram - Admin Laba Rugi
skinparam backgroundColor #FEFEFE
skinparam ActivityBackgroundColor #E3F2FD
skinparam ActivityBorderColor #2196F3
skinparam ActivityDiamondBackgroundColor #FFF9C4
skinparam ActivityDiamondBorderColor #FFC107
skinparam ArrowColor #1976D2
skinparam defaultFontSize 11

title Activity Diagram - Admin Laporan Laba Rugi

|#87CEEB|Admin|
|#E3F2FD|Sistem|

start

|Admin|
:Akses Laba Rugi;

|Sistem|
:Set Default Periode;
:Query Pendapatan;
:Query Beban;
:Calculate Totals;
:Tampilkan Laporan;

|Admin|
:Lihat Laporan;

if (Ubah Periode?) then (Ya)
  :Pilih Periode;
  :Klik Terapkan;
  
  |Sistem|
  :Recalculate;
  :Refresh Laporan;
else (Tidak)
endif

|Admin|
:Analisis Laporan;

|Sistem|
:Hitung Laba/Rugi;

if (Laba?) then (Ya)
  :Tampilkan LABA;
else (Rugi)
  :Tampilkan RUGI;
endif

|Admin|
if (Bandingkan?) then (Ya)
  :Pilih Periode Pembanding;
  
  |Sistem|
  :Tampilkan Side-by-Side;
  
  |Admin|
  :Analisis Trend;
else (Tidak)
endif

if (Export?) then (Ya)
  :Pilih Format;
  
  |Sistem|
  :Generate File;
  :Download;
else (Tidak)
endif

if (Print?) then (Ya)
  |Sistem|
  :Generate Print View;
  
  |Admin|
  :Print;
else (Tidak)
endif

stop

@enduml
