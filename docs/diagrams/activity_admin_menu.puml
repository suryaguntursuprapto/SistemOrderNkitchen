@startuml Activity Diagram - Admin Menu
skinparam backgroundColor #FEFEFE
skinparam ActivityBackgroundColor #E3F2FD
skinparam ActivityBorderColor #2196F3
skinparam ActivityDiamondBackgroundColor #FFF9C4
skinparam ActivityDiamondBorderColor #FFC107
skinparam ArrowColor #1976D2
skinparam defaultFontSize 11

title Activity Diagram - Admin Mengelola Menu

|#87CEEB|Admin|
|#E3F2FD|Sistem|

start

|Admin|
:Akses Kelola Menu;

|Sistem|
:Query Menu;
:Tampilkan Daftar;

|Admin|
if (Aksi?) then (Tambah)
  :Klik Tambah;
  
  |Sistem|
  :Tampilkan Form;
  
  |Admin|
  :Isi Data Menu;
  :Upload Gambar;
  :Klik Simpan;
  
  |Sistem|
  if (Valid?) then (Ya)
    :Simpan Menu;
    :Tampilkan Sukses;
  else (Tidak)
    :Tampilkan Error;
  endif

else if (Edit) then
  :Klik Edit;
  
  |Sistem|
  :Load Data;
  :Tampilkan Form;
  
  |Admin|
  :Edit Data;
  :Klik Update;
  
  |Sistem|
  if (Valid?) then (Ya)
    :Update Menu;
    :Tampilkan Sukses;
  else (Tidak)
    :Tampilkan Error;
  endif

else if (Hapus) then
  :Klik Hapus;
  
  |Sistem|
  :Cek Relasi Order;
  
  if (Ada Order?) then (Ya)
    :Tampilkan Warning;
  else (Tidak)
    |Admin|
    :Konfirmasi;
    
    |Sistem|
    :Delete Menu;
    :Tampilkan Sukses;
  endif

else (Toggle)
  :Klik Toggle Status;
  
  |Sistem|
  :Update Status;
  :Refresh;
endif

stop

@enduml
