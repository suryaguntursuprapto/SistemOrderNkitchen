@startuml Activity Diagram - Admin Laporan Penjualan
skinparam backgroundColor #FEFEFE
skinparam ActivityBackgroundColor #E3F2FD
skinparam ActivityBorderColor #2196F3
skinparam ActivityDiamondBackgroundColor #FFF9C4
skinparam ActivityDiamondBorderColor #FFC107
skinparam ArrowColor #1976D2
skinparam defaultFontSize 11

title Activity Diagram - Admin Laporan Penjualan

|#87CEEB|Admin|
|#E3F2FD|Sistem|

start

|Admin|
:Akses Laporan Penjualan;

|Sistem|
:Set Filter Default;
:Query Orders Selesai;
:Hitung Total;
:Tampilkan Laporan;

|Admin|
:Lihat Laporan;

if (Filter Periode?) then (Ya)
  :Pilih Periode;
  
  |Sistem|
  :Query dengan Filter;
  :Recalculate;
  :Refresh Tampilan;
else (Tidak)
endif

|Admin|
:Analisis Data;

if (Lihat Detail?) then (Ya)
  :Klik Order;
  
  |Sistem|
  :Redirect Detail;
else (Tidak)
endif

if (Export?) then (Ya)
  :Pilih Format;
  
  |Sistem|
  :Generate File;
  :Download;
else (Tidak)
endif

if (Print?) then (Ya)
  |Sistem|
  :Generate Print View;
  
  |Admin|
  :Print;
else (Tidak)
endif

|Admin|
:Selesai;

stop

@enduml
