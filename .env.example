APP_NAME="Sistem Pempek N'Kitchen"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Konfigurasi Database
# Sesuaikan dengan nama database yang Anda buat di phpMyAdmin
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=SistemPempek
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Konfigurasi Email (Mailtrap / SMTP Gmail)
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS="admin@nkitchen.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# -------------------------------------------------------------------------
# THIRD PARTY APIs
# -------------------------------------------------------------------------

# 1. Biteship (Ongkos Kirim & Pengiriman)
# Daftar di: https://biteship.com/
BITESHIP_API_KEY=
BITESHIP_BASE_URL=https://api.biteship.com
BITESHIP_ORIGIN_POSTAL_CODE=41361
BITESHIP_SHIPPER_NAME="N-Kitchen"
BITESHIP_SHIPPER_PHONE="08123456789"
BITESHIP_SHIPPER_EMAIL="admin@nkitchen.com"
BITESHIP_SHIPPER_ADDRESS="Jl. Contoh No. 123"
# Koordinat Toko (Penting untuk Grab/Gojek Instant)
BITESHIP_ORIGIN_LATITUDE=-6.330311
BITESHIP_ORIGIN_LONGITUDE=107.298920

# 2. Fonnte (WhatsApp Gateway - Notifikasi WA)
# Daftar di: https://fonnte.com/
FONNTE_TOKEN=
FONNTE_ADMIN_PHONE=628123456789

# 3. Google OAuth (Login dengan Google)
# Daftar di: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# 4. Midtrans (Payment Gateway)
# Daftar di: https://midtrans.com/
# Mode: sandbox (testing) atau production
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_MERCHANT_ID=
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_IS_SANITIZED=true
MIDTRANS_IS_3DS=true
